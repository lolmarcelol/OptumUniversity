
@model IEnumerable<OptumUniversity.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Alunos</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>

@using (Html.BeginForm("", "Aluno", FormMethod.Get))
{
    <p>
        Nome:
        @Html.TextBox("searchUser")
        <input type="submit" value="Buscar" />
    </p>
}

<font size="3" color="red">
    @ViewBag.Alerta
</font>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.AlunoID }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.AlunoID }) |
                @Html.ActionLink("Deletar", "Delete", new { id = item.AlunoID })
            </td>
        </tr>
    }

</table>
