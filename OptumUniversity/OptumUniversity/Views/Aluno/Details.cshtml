@model OptumUniversity.Models.Aluno

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cpf)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dd>
            <table class="table">
                <tr>
                    <th>Disciplinas</th>
                    <th>Notas</th>
                </tr>
                @foreach (var item in Model.Notas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Disciplina.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NotaAluno)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.AlunoID }) |
    @Html.ActionLink("Voltar para a Lista", "Index")
</p>
